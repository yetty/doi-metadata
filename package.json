{
	"name": "obsidian-doi-metadata",
	"version": "1.0.0",
	"description": "An Obsidian plugin that fetches and updates metadata for academic papers based on their DOI using the CrossRef API.",
	"main": "main.js",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"version": "node version-bump.mjs && git add manifest.json versions.json"
	},
	"keywords": [
		"obsidian",
		"plugin",
		"DOI",
		"metadata",
		"CrossRef",
		"academic",
		"papers",
		"reference",
		"bibliography"
	],
	"author": "Juda Kaleta",
	"license": "MIT",
	"devDependencies": {
		"@types/node": "^16.11.6",
		"@typescript-eslint/eslint-plugin": "5.29.0",
		"@typescript-eslint/parser": "5.29.0",
		"builtin-modules": "3.3.0",
		"esbuild": "0.17.3",
		"obsidian": "latest",
		"tslib": "2.4.0",
		"typescript": "4.7.4"
	}
}
